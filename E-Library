def exitcart():
    """exit procedure"""
    print("this is your shopping cart: ")
    print(cart)
    print("The total amount due is: ")
    carttotal = sum(item['price'] for item in cart)
    print(carttotal)
    while True:
        start = input("\nWould you like to check out? ")
        if start.lower() == "yes":
            print("\nThank you for you using PPCasa's Book Emporium. ")
            quit()
        elif start.lower() == "no":
            print("\nPlease wait as you are redirected to the shopping platform. ")
            shopping_cart()
        else:
            print ("\nPlease type in: 'yes' or 'no'. ")
            continue
shopping_cart()
