#ask for user sign up

print("\nWelcome to PPCasa's Book Emporium")
print("\nThis is project is meant to test PPCasa's skills in emulating an online bookstore")
print("\nTo use our service, please create your account: ")
username = input("\nPlease choose a username? - ")
password = input("\nPlease choose a password? - ")
print("\nWelcome " + username.title() + ".")
print("\nBefore accessing your account, we need you to log back in again.")

#log-in procedure

def useraccess():
    """passing user test"""
    while True:
        start = input("\nPlease insert your username: -  ")
        if start.lower() != username:
            print("\nYour username could not be verified, try again")
            continue
    
        else:
            print("\nThank you")
            break
useraccess ()

def useraccess_1():
    """ passing password test"""
    while True:
        start = input ("\nTo proceed please insert your password: ")
        if start.lower() == password:
            print("\nThank you, we are validating...")
            print("\nYou have passed our two factor system.")
            print("\nYou will be redirected to our book list.")
            print("\nPlease wait...")
            return
    
        else:
            print("\nYour password could not be verified, please try again")
            continue
useraccess_1()

