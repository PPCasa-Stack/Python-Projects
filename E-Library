#access booklist
def accesstitle():
    """passing access test"""
    print("\nDear " + username.title() + ".")
    while True:
        start = input("\nWould you like to view today's available titles? (yes or no) " )
        if start.lower() == "yes":
            print("\nPlease wait as I fetch the list of available titles. ")
            booktitles()
            return
            
        elif start.lower() == "no":
            start = input("\nWould you like to log out? ")
            if start.lower()== "yes":
                print("\nThank you for using our service ")
                quit()

            else:
                continue
        else:
            print("\nPlease type yes or no. ")
            break

def booktitles():
    """fetching library list"""
    print("\nThe number of available book is:", len(available_books))
    print("\nThe titles are: ")
    for books in available_books:
        print("\n" + books["name"] + " - ")
        print("Price: €" , books['price'])
        




def bookinterest ():
    """gauging user interest in books""" 
    while True:
        start = input("\nAre you interested in any of the books? ")
        if start.lower() == "yes":
            print("\nPlease wait as we redirect you to our shopping platform. ")
            shopping_platform()
            return
        elif start.lower() == "no":
            start = input("\nWould you like to place a suggestion for an out-of-stock book? ")
            if start.lower() == "yes":
                print("\nPlease wait as we redirect you to our suggestion platform. ")
                suggestion()
            elif start.lower() == "no":
                start = input("\nWould you like to log out?. ")
                if start.lower() == "yes":
                    print("\nThank you for using our service. ")
                    quit()
                elif start.lower() == "no":
                    return
                else:
                    print("\nPlease type yes or no. ")
                    break
            else:
                print("\nPlease type yes or no. ")
                break
        else:
            print("\nPlease type yes or no. ")
            break
accesstitle()



def shopping_platform():
    """user preselection list"""
    print("\nThe titles are: ")
    for books in available_books:
        print(books)
        shopping_cart()
cart = []

