def suggestion():
    """suggestion module 1"""
    while True:
        start = input ("\nWould you like to suggest a book? (type 'h' for help) "  ) 
        print("\nType 'yes' or 'no' \nYou may suggest up to 5 books. \nIf this your second (or above) suggestion, type 'more'  ")
        if start.lower() == 'yes':
            book_31 = {}
            book_31_name = input ("\nPlease enter the name of the book: ")
            book_31_author = input ("\nPlease enter the author of the book: ")
            book_31_publisher = input ("\nPlease enter the publisher of the book: ")
            book_31_genre = input ("\nPlease enter the genre of the book: ")
            book_31_price = input ("\nPlease enter the price of the book: ")
            book_31 = {'name' : book_31_name, 
            'author' : book_31_author,
            'publisher' : book_31_publisher,
            'genre' : book_31_genre,
            'price' : book_31_price
            }
            print("\nThank you, we have added your suggestion: ")
            print(book_31)
            return suggestion_2
        elif start.lower() == 'no':
            print("\nYou are being redirected to the shopping platform. ")
            bookinterest()
        elif start.lower() == 'more':
            suggestion_2
        else:
            pass
     
 
def suggestion_2():
    """suggestion module 2"""
    while True:
        start = input("\nWould you like to suggest a second book? (type 'h' for help) " )
        print("\nType 'yes' or 'no' \nYou may suggest up to 5 books. \nIf this your second (or above) suggestion, type 'more'  ")
        if start.lower() == 'yes':
            book_32 = {}
            book_32_name = input ("\nPlease enter the name of the book: ")
            book_32_author = input ("\nPlease enter the author of the book: ")
            book_32_publisher = input ("\nPlease enter the publisher of the book: ")
            book_32_genre = input ("\nPlease enter the genre of the book: ")
            book_32_price = input ("\nPlease enter the price of the book: ")
            book_32 = {'name' : book_31_name, 
            'author' : book_32_author,
            'publisher' : book_32_publisher,
            'genre' : book_32_genre,
            'price' : book_32_price
            }
            print("\nThank you, we have added your suggestion: ")
            print(book_31 + book_32)
            suggestion_3
        elif start.lower() == 'no':
            print("\nYou are being redirected to the shopping platform. ")
            bookinterest()
        elif start.lower() == 'more':
            suggestion_3
        else:
            pass

