print("\nGreetings and welcome to a PPCasa experience!")
time.sleep(2)
print("\nThis is PPCasa's first project and I hope you enjoy it...")
time.sleep(2)
print("\nBefore we proceed please share two details about yourself: ")
time.sleep(3)

username = input(" \nWhat is your name? ")
time.sleep(1)
print("\nWelcome " + username.title() + "!")
time.sleep(1)
companion = input("\nWhat is the name of your closest companion? ")
time.sleep(1)
print("\n" + companion.title() + ", ahh, well what a lovely name!")
time.sleep(2)

def companion_presence():
    """Comapanion presence understanding"""
    while True:
        start = input("\nIs your companion present? ")
        if start.lower() == "yes":
            print("\nGreat, let's get started!!!")
            time.sleep(2)
            break
        elif start.lower() == "no":
            print("\nWell??? Go get them!!!")
            time.sleep(2)
            continue
        else:
            print("\nWell this game should be played with a partner...")
            time.sleep(3)
            print("\n...but it's ok! Alright, alright! Make sure you mention this game!!!")
            time.sleep(3)
            break

companion_presence()

print("\nThank you " + username.title() + " for answering those questions.")
time.sleep(3)
print("\nThis project is a game called The Oracle. It is a simple text game to test PPCasa's Python abilities.")
time.sleep(3)

def start_game():
    """Game starting choice"""
    while True:
        start = input("\nWould you like to participate? ")
        if start.lower() == "yes":
            print("\nWonderful!")
            time.sleep(1)
            break
        elif start.lower() == "no":
            print("\nYou suck!")
            time.sleep(1)
            quit()
        else:
            print("\nSo...")
            time.sleep(1)
            print("\nIs it a yes or is it a no?")
            time.sleep(1)
            continue
            
start_game()

#You are now ready to begin the game.")

