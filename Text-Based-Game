def fight():
    """Player fights"""
    print("\nYou run towards the monster, fighting with all your strength.")
    sleep(3)
    print("\nBut you can't move.")
    sleep(3)
    print("\n'You fool! " + username.title() + ".'")
    sleep(3)
    print("\n'Did you think you could stop me?'")
    sleep(3)
    print("\n'Not even " + companion.title() +" could make it.'")
    sleep(3)
    print("\nThe incadenscent eyes grow closer to you.")
    sleep(3)
    print("\nYou struggle to move.")
    sleep(3)
    print("\nThe eyes grow closer.")
    sleep(3)
    print("\nA hand touches you.")
    sleep(3)
    print("\nEverything goes black.")
    sleep(3)
    morning()

pause_dot = "\n...\n"
for dot in pause_dot:
        sleep(.2)
        sys.stdout.write(dot)
        sys.stdout.flush()

def run():
    """Player runs"""
    print("\nYou head towards the entrance")
    sleep(3)
    print("\nYou can see a faint light from the main door")
    sleep(3)
    print("\nYou run towards the exit, but as you get closer, the light gets further away.")
    sleep(3)
    print("\nYour legs feel heavy until you can no longer move.")
    sleep(3)
    print("\nYou feel a burning sensation on your neck.")
    sleep(3)
    print("\n'You are fool just like " + companion.title() + ".'")
    sleep(3)
    print("\nYou feel a hand touching your shoulder.")
    sleep(3)
    print("\nEverything goes black.")
    sleep(3)
    morning()

pause_dot = "\n...\n"
for dot in pause_dot:
        sleep(.2)
        sys.stdout.write(dot)
        sys.stdout.flush()

def morning():
    """morning end"""
    print("\nYou open your eyes, the morning light shines through the window.")
    sleep(3)
    print("\nYou are safely in your bed.")
    sleep(3)
    print("\nYou turn your head around and " + companion.title() + " is right next to you.")
    sleep(3)
    print("\nWas it all a dream??")
    sleep(3)
    print("\nWhat a weird dream, I should go easy on the cheese.")
    sleep(3)


def monster():
  """player faces monster"""
  while True:
    start = input("\nYou must choose: 1) Fight, 2) Run :")
    print("\n")
    if start == "1":
        fight()
        return
    elif start == "2":
        run()
        return


monster()

exit
